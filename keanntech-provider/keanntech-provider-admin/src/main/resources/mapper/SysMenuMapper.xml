<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.keanntech.provider.admin.mapper.SysMenuMapper">

    <resultMap type="com.keanntech.common.model.po.SysMenu" id="SysMenuMap">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="parentId" column="parent_id" jdbcType="INTEGER"/>
        <result property="menuName" column="menu_name" jdbcType="VARCHAR"/>
        <result property="menuTitle" column="menu_title" jdbcType="VARCHAR"/>
        <result property="path" column="path" jdbcType="VARCHAR"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
        <result property="deleted" column="deleted" jdbcType="BOOLEAN"/>
        <result property="redirect" column="redirect" jdbcType="VARCHAR"/>
        <result property="component" column="component" jdbcType="VARCHAR"/>
        <result property="icon" column="icon" jdbcType="VARCHAR"/>
        <result property="show" column="show" jdbcType="BOOLEAN"/>
        <result property="sort" column="sort" jdbcType="INTEGER"/>
        <result property="sysCompanyId" column="sys_company_id" jdbcType="INTEGER"/>
        <result property="createId" column="create_id" jdbcType="INTEGER"/>
        <result property="updateId" column="update_id" jdbcType="INTEGER"/>
        <result property="createDate" column="create_date" jdbcType="TIMESTAMP"/>
        <result property="updateDate" column="update_date" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--根据角色ID查询-->
    <select id="loadSysMenus" parameterType="java.util.List" resultMap="SysMenuMap">
        select
          menu.* from sys_menu menu, sys_role_menu_relation menurela
        where menu.show = 1 and menu.id = menurela.sys_menu_id and deleted = 0 and menurela.sys_role_id in
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
        order by menu.sort asc
    </select>

    <select id="loadAllSysMenus" resultMap="SysMenuMap">
        SELECT * FROM sys_menu where deleted = 0
    </select>

    <!--根据父ID查询-->
    <select id="loadMenusByParentId" resultMap="SysMenuMap">
        SELECT * FROM sys_menu WHERE parent_id = #{parentId} and deleted = 0 ORDER BY sort ASC
    </select>

    <!--查询单个-->
    <select id="queryById" resultMap="SysMenuMap">
        select
          id, create_id, update_id, create_date, update_date, remark, deleted, parent_id, menu_name, type, href, target, icon, show, permission, path, sort, sys_company_id
        from keanntech_admin.sys_menu
        where id = #{id} and deleted = 0
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into keanntech_admin.sys_menu(create_id, update_id, create_date, update_date, remark, deleted, parent_id, menu_name, type, href, target, icon, show, permission, path, sort, sys_company_id)
        values (#{createId}, #{updateId}, #{createDate}, #{updateDate}, #{remark}, #{deleted}, #{parentId}, #{menuName}, #{icon}, #{show}, #{path}, #{sort}, #{sysCompanyId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update keanntech_admin.sys_menu
        <set>
            <if test="createId != null">
                create_id = #{createId},
            </if>
            <if test="updateId != null">
                update_id = #{updateId},
            </if>
            <if test="createDate != null">
                create_date = #{createDate},
            </if>
            <if test="updateDate != null">
                update_date = #{updateDate},
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark},
            </if>
            <if test="deleted != null">
                deleted = #{deleted},
            </if>
            <if test="parentId != null">
                parent_id = #{parentId},
            </if>
            <if test="menuName != null and menuName != ''">
                menu_name = #{menuName},
            </if>

            <if test="icon != null and icon != ''">
                icon = #{icon},
            </if>
            <if test="show != null">
                show = #{show},
            </if>

            <if test="path != null and path != ''">
                path = #{path},
            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
            <if test="sysCompanyId != null">
                sys_company_id = #{sysCompanyId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from keanntech_admin.sys_menu where id = #{id}
    </delete>


</mapper>